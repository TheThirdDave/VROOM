div(class='gas-module')
    div(class='left')
        div  Select A Gas Station
    div(class='right')
        div(class='gas-station chevron')
            //img(src='images/ChevronFinal.png', class='gas-station')
            //div $2.50/GAL   1.0 MI
            div 
                span(class='gas-station-name'){{cheapestStation}} 
                br 
                ${{cheapestPrice}}/Gallon | {{cheapestDistance}}

        div(class='gas-station shell')
            //img(src='images/ShellFinal.png', class='gas-station')
            //div $2.89/GAL .25 MI
            div 
                span(class='gas-station-name'){{closestStation}} 
                br 
                ${{closestPrice}}/Gallon | {{closestDistance}}

div(class='footer')
    img(src='images/mic-white.png', class='mic-icon')
    h3(class='user-input')

div(class='testing')
        h1 {{receivedWords}}
        button(ng-click='listen()') Speak
